            <TableColumn fx:id="colNome" text="Material" prefWidth="200"/>
            <TableColumn fx:id="colStock" text="Stock" prefWidth="100"/>
            <TableColumn fx:id="colPreco" text="PreÃ§o" prefWidth="100"/>
