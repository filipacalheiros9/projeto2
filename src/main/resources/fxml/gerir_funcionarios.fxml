<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>

    <VBox xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.controllers.GerirFuncionariosController"
          spacing="10" style="-fx-padding: 20;">

        <Label text="Gestão de Funcionários"
               style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <Button text="Adicionar Funcionário"
                onAction="#abrirAdicionarFuncionarioPopup"
                style="-fx-font-size:14px; -fx-padding:8 16; -fx-background-color: #7ba3d8; -fx-text-fill: white;" />
        <Button text="Remover Funcionário"
                onAction="#RemoverFuncionario"
                style="-fx-font-size:14px; -fx-padding:8 16; -fx-background-color: #7ba3d8; -fx-text-fill: white;" />
    <Button text="Editar Funcionário"
            onAction="#abrirEditarFuncionarioPopup"
            style="-fx-font-size:14px; -fx-padding:8 16; -fx-background-color: #7ba3d8; -fx-text-fill: white;" />
    </VBox>
