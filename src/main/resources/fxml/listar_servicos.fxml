<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.Label?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controllers.ListarServicosController"
      spacing="10" style="-fx-padding:20;" alignment="CENTER">

    <!-- Título -->
    <Label text="Lista de Serviços" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- TableView para exibir os serviços -->
    <TableView fx:id="servicosTable" prefWidth="500">
        <columns>
            <TableColumn fx:id="idCol" text="ID" prefWidth="100"/>
            <TableColumn fx:id="dataCol" text="Data" prefWidth="150"/>
            <TableColumn fx:id="precoCol" text="Preço" prefWidth="100"/>
            <TableColumn fx:id="estadoCol" text="Estado" prefWidth="150"/>
            <TableColumn fx:id="nomeProjetoCol" text="Projeto" prefWidth="150"/>
            <TableColumn fx:id="nomeFuncionarioCol" text="Funcionário" prefWidth="150"/>
        </columns>
    </TableView>

    <!-- Botão de Fechar -->
    <Button text="Fechar" onAction="#handleFechar"
            style="-fx-padding: 6 12; -fx-background-color: #e74c3c; -fx-text-fill: white;" />

</VBox>
