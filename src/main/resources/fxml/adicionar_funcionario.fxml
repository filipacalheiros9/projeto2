<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.controllers.AdicionarFuncionarioController">

    <Label text="Nome:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="nomeField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Nome de utilizador:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="usernameField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Palavra passe:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Cargo:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <ComboBox fx:id="cargoComboBox" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1" alignment="CENTER_RIGHT">
        <Button text="Adicionar" onAction="#adicionarFuncionario" style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        <Button text="Cancelar" onAction="#cancelar" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    </HBox>
</GridPane>
