<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controllers.FornecedorController"
      spacing="10" style="-fx-padding:20;">

    <Label text="Fornecedor" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
    <Button text="Adicionar Fornecedor"
            onAction="#handleAdicionarFornecedor"
            style="-fx-font-size:14px; -fx-padding:8 16; -fx-background-color: #7ba3d8; -fx-text-fill: white;" />

    <Button text="Remover Fornecedor"
            onAction="#handleRemoverFornecedores"
            style="-fx-font-size:14px; -fx-padding:8 16; -fx-background-color: #7ba3d8; -fx-text-fill: white;" />

    <Button text="Listar Fornecedores"
            onAction="#handleListarFornecedores"
            style="-fx-font-size:14px; -fx-padding:8 16; -fx-background-color: #7ba3d8; -fx-text-fill: white;" />

    <Button text="Pagamento Fornecedor"
            onAction="#handlePagamentoFornecedor"
            style="-fx-font-size:14px; -fx-padding:8 16; -fx-background-color: #7ba3d8; -fx-text-fill: white;" />

    <Button text="Listar Pagamentos Fornecedores"
            onAction="#handleListarPagamentosFornecedores"
            style="-fx-font-size:14px; -fx-padding:8 16; -fx-background-color: #7ba3d8; -fx-text-fill: white;" />

</VBox>


