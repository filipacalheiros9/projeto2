<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.controllers.EditarServicoController"
      style="-fx-padding: 20 20 20 20;">

    <Label text="Editar Serviço" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <ComboBox fx:id="comboServico" prefWidth="300" />

    <Label text="Estado:" />
    <TextField fx:id="txtEstado" />

    <Label text="Preço (opcional):" />
    <TextField fx:id="txtPreco" />

    <Label fx:id="lblMensagem" style="-fx-text-fill: red;" />

    <Button text="Atualizar" onAction="#handleAtualizar"
            style="-fx-background-color: #2ecc71; -fx-text-fill: white;" />
    <Button text="Fechar" onAction="#handleFechar"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white;" />
</VBox>
